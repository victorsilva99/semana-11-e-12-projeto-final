@model IEnumerable<TSystems.ASPNETCoreMVC.Torneio.Models.ChampionModel>

@{
    ViewData["Title"] = "Champions";
}
<link rel="stylesheet" href="~/css/pages/index.css" />
<link rel="stylesheet" href="~/css/pages/champion.css" />
<script src="~/js/pages/sounds.js"></script>
<script>
    diminuirVolumeGeral();
    audioBackgroundChampions.play();
</script>
<script src="~/js/pages/champions.js"></script>

<header>
    <h1>
        Draft
    </h1>
    <h5>
        Selecione 16 campeões para começar!
    </h5>
    <div class="botao_iniciar centralizado">
        <button id="iniciar" class="custom-btn btn-3" type="button" onclick="iniciar()">
            <span>
                Iniciar
            </span>
        </button>
    </div>
</header>
<section>
    <div class="container-fluid row">
        @foreach (var champion in Model)
        {
            <div id="@(champion.Id)" class="cards" onclick="selecionar(@champion.Id)">
                <span id="selected-@champion.Id" hidden>false</span>
                <div class="card_img">
                    <img src="~/img/champions/@(champion.Nome).png" alt="Card do Champion" />
                </div>
                <div class="nome">
                    <h4>@champion.Nome</h4>
                </div>
                <div class="informacoes">
                    <div class="row">
                        <div class="col-auto pr-0 pl-4">
                            <p>Skills: @champion.Habilidades </p>
                        </div>
                        <div class="col-auto">
                            <p>Fights: @champion.TotalDeLutas </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-auto pr-0 pl-4">
                            <p> Victories: @champion.Vitorias </p>
                        </div>
                        <div class="col-auto">
                            <p> Defeats: @champion.Derrotas </p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

